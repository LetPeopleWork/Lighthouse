{
  "name": "lighthouse.frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "cross-env VITE_API_BASE_URL=http://localhost:5169/api vite",
    "dev-demo": "cross-env VITE_API_SERVICE_TYPE=DEMO VITE_API_SERVICE_DELAY=TRUE npm run dev",
    "build": "tsc -b && vite build --outDir ../Lighthouse.Backend/wwwroot",
    "build-docker": "tsc -b && vite build --outDir ./dist",
    "build-demo": "cross-env VITE_API_SERVICE_TYPE=DEMO VITE_API_SERVICE_DELAY=TRUE vite build",
    "prebuild": "npx @biomejs/biome check --write ./src",
    "preview": "vite preview",
    "test": "vitest --reporter=default",
    "sonarreport": "vitest run --coverage --reporter=vitest-sonar-reporter --outputFile=./sonar-report.xml"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@melloware/react-logviewer": "^6.1.2",
    "@microsoft/signalr": "^8.0.7",
    "@mui/icons-material": "^6.4.2",
    "@mui/lab": "^6.0.0-beta.25",
    "@mui/material": "^6.4.2",
    "@mui/x-charts": "^7.25.0",
    "@mui/x-date-pickers": "^7.25.0",
    "@syncfusion/ej2": "^28.2.3",
    "@syncfusion/ej2-base": "^28.2.3",
    "@syncfusion/ej2-react-charts": "^28.2.4",
    "axios": "^1.7.9",
    "dayjs": "^1.11.13",
    "lodash.debounce": "^4.0.8",
    "lorem-ipsum": "^2.0.8",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-markdown": "^9.0.3",
    "react-router-dom": "^7.1.5",
    "remark-gfm": "^4.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/lodash.debounce": "^4.0.9",
    "@types/node": "^22.13.0",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.0.5",
    "cross-env": "^7.0.3",
    "jsdom": "^26.0.0",
    "typescript": "^5.7.3",
    "vite": "^6.0.11",
    "vitest": "^3.0.3",
    "vitest-sonar-reporter": "^2.0.0"
  }
}
